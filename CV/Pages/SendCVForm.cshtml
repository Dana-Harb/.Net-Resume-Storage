@page
@model CV.Pages.SendCVFormModel
@{
	
}


<h1 style="padding-bottom:50px; padding-top:50px;">Send out Your CV to Store it in Our Archive...</h1>

	<form method="post" enctype="multipart/form-data" class="container">

			
				<div class="form-group">
					<label asp-for="input.FirstName" class="form-label mt-4">First Name</label>
					<input  asp-for="input.FirstName" class="form-control"/>
				</div>

				<div class="form-group">
					<label asp-for="input.LastName" class="form-label mt-4">Last Name</label>
					<input asp-for="input.LastName" class="form-control"/>
				</div>

				<div class="form-group has-success has-danger">
					<label asp-for="input.Email" class="form-label mt-4">Email</label>
					<input  asp-for="input.Email" class="form-control"/>
					<span asp-validation-for="input.Email"></span>
				</div>

				<div class="form-group has-success has-danger">
					<label asp-for="input.ConfirmEmail" class="cform-label mt-4">Confirm Email</label>
					<input  asp-for="input.ConfirmEmail" class="form-control"/>
					<span asp-validation-for="input.ConfirmEmail"></span>
				</div>
				
				<div class="form-group">
					<label asp-for="input.DoB" class="form-label mt-4">Date of Birth</label>
					<input class="form-control" asp-for="input.DoB"/>
				</div>

				<div class="form-group">
					<label class="form-label mt-4">Gender</label>
					<div class="form-check">
						<input  class="form-check-input" type="radio" asp-for="input.Gender" value="male"/>
						<label class="form-check-label"> male</label>
					</div>
					<div class="form-check">
						<input class="form-check-input" type="radio"  asp-for="input.Gender" value="female"/>
						<label class="form-check-label">female</label>
					</div>
				</div>
			
				<div class="form-group">
					<label class="form-label mt-4" asp-for="input.Nationality">Nationality</label>
					<select class="form-select" asp-for="input.Nationality" asp-items="Model.Items" ></select>
				</div>

				<div class="form-group" style="padding-bottom:20px; padding-top:20px;">
					<label>Programming Skills</label>
					<div class="form-check">
						<input class="form-check-input" asp-for="input.Java" type="checkbox">
						<label class="form-check-label" asp-for="input.Java"></label>
					</div>
					<div class="form-check">
						<input class="form-check-input" asp-for="input.Javascript" type="checkbox">
						<label class="form-check-label" asp-for="input.Javascript"></label>
					</div>
					<div class="form-check">
						<input class="form-check-input" asp-for="input.C" type="checkbox">
						<label class="form-check-label" asp-for="input.C"></label>
					</div>
					<div class="form-check">
						<input class="form-check-input" asp-for="input.Python" type="checkbox">
						<label class="form-check-label" asp-for="input.Python"></label>
					</div>
				</div>
		
				<div class="form-group">
					<input  class="form-control" asp-for="input.Image" />
				</div>
				<div class="form-group">
					<input class="form-control" asp-for="input.X" value="@Model.num1" />
					<input class="form-control" asp-for="input.Y" value="@Model.num2" />
				</div>
				<div class="form-group has-success has-danger">
					<label class="form-label mt-4">Enter the sum of @Model.num1 and @Model.num2 : </label>
					<input  class="form-control" asp-for="input.verification"/>
				</div>
			
		<div style="display:flex; justify-content:center;">
			<button class=" btn btn-primary" style="margin-top:30px; margin-bottom:30px;" type="submit">Submit CV</button>
		</div>

		<div asp-validation-summary="All">

		</div>

	</form>
